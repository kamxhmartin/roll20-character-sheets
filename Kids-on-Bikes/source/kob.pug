      h2
        img(src='https://raw.githubusercontent.com/Roll20/roll20-character-sheets/master/Kids-on-Bikes/images/Label-Backpack-1.png', width='250', height='45', alt='')
      textarea(name='attr_backpack', rows='5')
  .sheet-box
    .sheet-onlycol(style='width: 98%;')
      h2
        img(src='https://raw.githubusercontent.com/Roll20/roll20-character-sheets/master/Kids-on-Bikes/images/Label-Notes-1.png', width='250', height='45', alt='')
      textarea(name='attr_notes', rows='5', cols='70')
      br
